	number   =  7,
	pages    = "100592",
	month    =  jul,
	year     =  2024,
	keywords = "barcoding; benchmarking; doublet detection; lineage tracing;
	machine learning; scRNA-seq; single-cell genomics; singletCode;
	singlets",
	language = "en"
}

